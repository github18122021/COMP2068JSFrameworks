<section class="container mx-auto px-4 py-8 md:py-12 flex flex-wrap items-center justify-center">
    <section class="w-full md:w-1/2 px-4 mb-8 md:mb-0 flex items-center">
        <section class="relative" style="padding-top: 100%; width: 100%;">
            <section id="canvas-for-googlemap" class="absolute inset-0">
                <iframe class="absolute inset-0 w-full h-full border-0" frameborder="0" src="https://www.google.com/maps/embed/v1/place?q=Barrie&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"></iframe>
            </section>
        </section>
    </section>

    <section class="w-full md:w-1/2 px-4 flex items-center">
        <section class="max-w-lg mx-auto">
            <h1 class="text-3xl font-bold mb-4 text-center text-green-600">Contact Me</h1>
            <p class="text-lg text-gray-700 mb-6 text-center">Iâ€™d love to hear from you! Feel free to contact me using the form below.</p>

            <form id="contact_form">
                <section class="mb-4">
                    <label for="name" class="block text-sm font-semibold text-gray-600">Name:</label>
                    <input type="text" id="name" name="name" required class="w-full px-4 py-2 mt-1 border rounded-md focus:outline-none focus:ring focus:border-green-400" />
                </section>
                <section class="mb-4">
                    <label for="email" class="block text-sm font-semibold text-gray-600">Email:</label>
                    <input type="email" id="email" name="email" required class="w-full px-4 py-2 mt-1 border rounded-md focus:outline-none focus:ring focus:border-green-400" />
                </section>
                <section class="mb-6">
                    <label for="message" class="block text-sm font-semibold text-gray-600">Message:</label>
                    <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 mt-1 border rounded-md focus:outline-none focus:ring focus:border-green-400"></textarea>
                </section>
                <button type="submit" class="w-full px-4 py-2 text-white bg-green-600 rounded-md hover:bg-green-700">Send Message</button>
            </form>
        </section>
    </section>
</section>
