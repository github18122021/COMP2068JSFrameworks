<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>{{title}} | Vraj's Portfolio</title>

  <!-- Javascript -->
  <script defer src="/javascripts/script.js"></script>

  <!-- CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  
  <link rel="stylesheet" href="/stylesheets/style.css" /> 

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Open+Sans:wght@400;700&display=swap"
    rel="stylesheet" />

  <link href="https://fonts.googleapis.com/css2?family=Russo+One&display=swap" rel="stylesheet" />

  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@500&family=Russo+One&display=swap"
    rel="stylesheet" />

  <!-- Favicons -->
  <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon_io/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon_io/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="images/favicon_io/favicon-16x16.png" />
  <link rel="manifest" href="/site.webmanifest" />
  
</head>

<body class="font-sans bg-gray-50 text-gray-900 flex flex-col min-h-screen">
  <!-- Header -->
  <header>
    <nav class="bg-white shadow-md">
      <section class="container mx-auto px-1 py-4 flex justify-between items-center">
        <!-- Logo -->
        <section class="logo text-black">Vraj's Portfolio</section>
        <!-- Navigation Links: screen > md -->
        <ul id="horizontal_nav" class="hidden md:flex space-x-8 text-lg">
          <li><a class="hover:text-green-700 transition-colors duration-200 font-bold" href="/">Home</a></li>
          <li><a class="hover:text-green-700 transition-colors duration-200 font-bold" href="/about">About Me</a></li>
          <li><a class="hover:text-green-700 transition-colors duration-200 font-bold" href="/projects">Projects</a>
          </li>
          <li><a class="hover:text-green-700 transition-colors duration-200 font-bold" href="/contact">Contact Me</a>
          </li>
          <ul class="flex space-x-4 justify-center mb-4 text-lg">
            <li>
              <a class="hover:text-green-600 transition-colors duration-200 font-bold"
                href="https://github.com/github18122021">
                <i class="fab fa-github"></i>
                <!-- Font Awesome GitHub icon -->
              </a>
            </li>
            <li>
              <a class="hover:text-green-600 transition-colors duration-200 font-bold"
                href="https://www.linkedin.com/in/vraj-bagadiya-9801b9256/">
                <i class="fab fa-linkedin"></i>
                <!-- Font Awesome LinkedIn icon -->
              </a>
            </li>
          </ul>
        </ul>

        <!-- menu icon for screen < md -->
        <div class="md:hidden">
          <button id="menu-toggle" class="focus:outline-none">
            <i class="fas fa-bars text-2xl"></i>
            <!-- Font Awesome bars icon -->
          </button>
        </div>
      </section>

      <!-- menu option to be displayed when the menu icon is clicked && screen < md -->
      <section id="mobile-menu" class="hidden md:hidden bg-white p-4 shadow-md">
        <ul class="flex flex-col align-center space-y-4 text-lg">
          <li><a
              class="nav-link hover:text-green-700 transition-colors duration-200 font-bold text-center py-2 rounded-md"
              href="/">Home</a></li>
          <li><a
              class="nav-link hover:text-green-700 transition-colors duration-200 font-bold text-center py-2 rounded-md"
              href="/about">About Me</a></li>
          <li><a
              class="nav-link hover:text-green-700 transition-colors duration-200 font-bold text-center py-2 rounded-md"
              href="/projects">Projects</a></li>
          <li><a
              class="nav-link hover:text-green-700 transition-colors duration-200 font-bold text-center py-2 rounded-md"
              href="/contact">Contact Me</a></li>
        </ul>
      </section>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto py-12 flex-grow">
    {{{body}}}
  </main>

  {{! random idea: whether to add extra info here or not ? }}

  <!-- Footer -->
  <footer class="bg-white shadow-inner py-4">
    <section class="container mx-auto text-center">
      <!-- Social Links -->
      <ul class="flex space-x-6 justify-center mb-4 text-lg">
        <li>
          <a class="hover:text-blue-600 transition-colors duration-200 font-bold"
            href="https://github.com/github18122021">
            <i class="fab fa-github"></i>
            <!-- Font Awesome GitHub icon -->
          </a>
        </li>
        <li>
          <a class="hover:text-blue-600 transition-colors duration-200 font-bold"
            href="https://www.linkedin.com/in/vraj-bagadiya-9801b9256/">
            <i class="fab fa-linkedin"></i>
            <!-- Font Awesome LinkedIn icon -->
          </a>
        </li>
      </ul>
      <!-- Copyright Text -->
      <p class="text-gray-700">&copy; 2024 Vraj's Portfolio</p>
    </section>
  </footer>
</body>

</html>